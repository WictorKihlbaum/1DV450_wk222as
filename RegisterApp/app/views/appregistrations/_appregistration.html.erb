<li id="appregistration-<%= appregistration.id %>">

  <span class="user">
    <span class="bold-text">Owner: </span>
      <%= appregistration.user.name %>
  </span>

  <span class="content">
    <span class="bold-text">App:</span>
    <%= appregistration.content %>
  </span>

  <span class="apikey">
    <span class="bold-text">API-Key:</span>
    <%= appregistration.apikey %>
  </span>

  <span class="timestamp">
    <% if current_user?(appregistration.user) %>
      <%= link_to "Delete", appregistration, method: :delete,
                  data: { confirm: "You sure?" } %>
    <% end %>
  </span>

</li>