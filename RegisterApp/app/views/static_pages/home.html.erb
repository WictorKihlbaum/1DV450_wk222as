<% if logged_in? %>
    <div class="row">
      <aside class="col-md-4">
        <section class="user_info">
          <%= render 'shared/user_info' %>
        </section>
        <section class="appregistration_form">
          <%= render 'shared/appregistration_form' %>
        </section>
      </aside>
      <div class="col-md-8">
        <h3>Registered Apps</h3>
        <%= render 'shared/feed' %>
      </div>
    </div>
<% else %>
    <div class="center jumbotron">
      <h1>Welcome to the Registration App</h1>

      <h2>
        This is the home page for the registration application.
      </h2>

      <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
    </div>
<% end %>